- test:
    name: {{ node.name }}
    timeout:
      minutes: {{ job_timeout|default(15) }}
    definitions:
       - repository: https://github.com/kernelci/test-definitions
         from: git
         revision: kernelci.org
         path: automated/linux/ltp/ltp.yaml
         name: {{ node.name }}
         parameters:
            TST_CMDFILES: "{{ tst_cmdfiles|default('') }}"
            SKIP_INSTALL: "{{ skip_install }}"
            SKIPFILE: {{ skipfile }}
