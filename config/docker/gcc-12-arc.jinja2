{% extends 'base/host-tools.jinja2' %}

{% block packages %}
{{ super() }}
#
# pre-built toolchains for ARC available here:
#    https://github.com/foss-for-synopsys-dwc-arc-processors/toolchain/releases/
#
#
ENV CROSS_TARBALL arc_gnu_2023.03_prebuilt_elf32_le_linux_install.tar.gz
ENV CROSS_URL https://github.com/foss-for-synopsys-dwc-arc-processors/toolchain/releases/download/arc-2023.03-release/${CROSS_TARBALL}
RUN cd /tmp && \
    wget -q ${CROSS_URL} && \
    tar -C /usr --strip-components=1 -xaf ${CROSS_TARBALL} && \
    rm -f ${CROSS_TARBALL}
{%- endblock %}
