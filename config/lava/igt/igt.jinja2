- test:
    timeout:
      minutes: 10
    definitions:
    - repository:
        metadata:
          format: Lava-Test Test Definition 1.0
          name: {{ plan }}
          description: "IGT test plan"
          os:
          - oe
          scope:
          - functional
        run:
          steps:
          - >
              IGT_FORCE_DRIVER={{ drm_driver }} /usr/bin/igt-parser.sh
              {{ tests|wordwrap(1, False, "\n              ") }}
      from: inline
      name: {{ plan }}
      path: inline/{{ plan }}.yaml
      lava-signal: kmsg
