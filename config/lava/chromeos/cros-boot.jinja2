{% extends 'base/kernel-ci-base.jinja2' %}
{% block main %}
{{ super () }}
context:
  extra_kernel_args: console_msg_format=syslog cros_secure cros_debug root=/dev/{{ flashing_device }}p3 rootwait
{%- if device_id %}
tags: ['{{ device_id }}']
{%- endif %}
{% endblock %}

{% block actions %}
{{ super () }}
actions:
- deploy:
    namespace: boot_chromeos
    timeout:
      minutes: 10
    to: tftp
    kernel:
{%- if fixed_kernel is not defined %}
      url: {{ kernel_url }}
{%- else %}
      # Fixed reference kernel
      url: {{ reference_kernel.image }}
{%- endif %}
    os: oe

- boot:
    namespace: boot_chromeos
    timeout:
      minutes: 5
    method: depthcharge
    commands: emmc
    prompts:
      - {{ prompt_command }}
{% endblock %}
