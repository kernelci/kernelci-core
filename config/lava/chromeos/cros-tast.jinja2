{% extends 'base/kernel-ci-base.jinja2' %}
{% block main %}
{% do context.update({"extra_kernel_args": "console_msg_format=syslog earlycon cros_debug cros_secure root=/dev/mmcblk0p3 rootwait" }) %}
{{ super() }}
{%- if device_id %}
tags: ['{{ device_id }}']
{%- endif %}
{% endblock %}
{% block actions %}
actions:
- deploy:
      timeout:
        minutes: {{ job_timeout }}
      to: tftp
      kernel:
{%- if fixed_kernel is not defined %}
        url: {{ kernel_url }}
{%- else %}
        # Fixed reference kernel
        url: {{ reference_kernel.image }}
{%- endif %}
      os: oe

- boot:
      timeout:
        minutes: 30
      method: depthcharge
      commands: emmc
      prompts:
        - {{ prompt_command }}

{% include 'chromeos/tast.jinja2' %}

{% endblock %}
